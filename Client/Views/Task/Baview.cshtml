@{
    ViewData["Title"] = "Home Page";
    Layout = "";
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<!-- MAIN CONTENT-->
<body>
    @*<div class="container">
        <p class="draggable" draggable="true">1</p>
        <p class="draggable" draggable="true">2</p>
    </div>
    <div class="container">
        <p class="draggable" draggable="true">3</p>
        <p class="draggable" draggable="true">4</p>
    </div>*@

    <!-- Masthead -->
    <header class="masthead">
        <div class="boards-menu">
            <button class="boards-btn btn"><i class="fab fa-trello boards-btn-icon"></i>Boards</button>
            <div class="board-search">
                <input type="search" class="board-search-input" aria-label="Board Search">
                <i class="fas fa-search search-icon" aria-hidden="true"></i>
            </div>
        </div>

        <div class="logo">
            <h1><i class="fab fa-trello logo-icon" aria-hidden="true"></i>MII</h1>
        </div>
    </header>
    <!-- End of masthead -->
    <!-- Board info bar -->
    <section class="board-info-bar">

        <div class="board-controls">

            <button class="board-title btn">
                <h2>Web Development</h2>
            </button>

            <button class="star-btn btn" aria-label="Star Board">
                <i class="far fa-star" aria-hidden="true"></i>
            </button>

            <button class="personal-btn btn">Personal</button>

            <button class="private-btn btn"><i class="fas fa-briefcase private-btn-icon" aria-hidden="true"></i>Private</button>

        </div>

        <button class="menu-btn btn"><i class="fas fa-ellipsis-h menu-btn-icon" aria-hidden="true"></i>Show Menu</button>

    </section>
    <!-- End of board info bar -->
    <!-- Lists container -->
    <section class="lists-container">

        <div class="list">
            <h3 class=" list-title">Tasks to Do</h3>
            <ul class="list-items container" >
                <li class="draggable" draggable="true">Complete mock-up for client website</li>
                <li class="draggable" draggable="true">Email mock-up to client for feedback</li>
                <li class="draggable" draggable="true">Update personal website header background image</li>
            </ul>
            <button class="add-card-btn btn">Add a card</button>
        </div>

        <div class="list">
            <h3 class="list-title">Completed Tasks</h3>
            <ul class="list-items container">
                <li class="draggable" draggable="true" >Clear email inbox</li>
                <li class="draggable" draggable="true">Finalise requirements for client web design</li>
                <li class="draggable" draggable="true">Begin work on mock-up for client website</li>
            </ul>
            <button class="add-card-btn btn">Add a card</button>
        </div>


        <div class="list">

            <h3 class="list-title">Topics/Concepts to Learn</h3>

            <ul class="list-items container">
                <li class="draggable" draggable="true">HTML 5.2 New Features</li>
                <li class="draggable" draggable="true">Responsive Images (picture element, srcset/sizes etc.)</li>
                <li class="draggable" draggable="true">Serverless</li>
                <li class="draggable" draggable="true">Variable Fonts</li>

            </ul>

            <button class="add-card-btn btn">Add a card</button>

        </div>

        <div class="list">

            <h3 class="list-title">Useful Websites for Learning</h3>

            <ul class="list-items container">
                <li class="draggable" draggable="true">Code Academy</li>
                <li class="draggable" draggable="true">CodePen</li>
                <li class="draggable" draggable="true">Codrops</li>
                <li class="draggable" draggable="true">CSS-Tricks</li>
                <li class="draggable" draggable="true">Free Code Camp</li>

            </ul>

            <button class="add-card-btn btn">Add a card</button>

        </div>


        <button class="add-list-btn btn">Add a list</button>

    </section>
    <!-- End of lists container -->

    <script type="text/javascript" src="~/js/task.js"></script>

</body>
<!-- END MAIN CONTENT-->
</html>





