@using ProjectTimeLine.Model;

@model List<ProjectTimeLine.Model.Project>;
@{
    ViewData["Title"] = "Gantt";
    Layout = "_LayoutDashboard";
}


<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <!-- MAP DATA-->
                    <div class="map-data m-b-250">
                        <h3 class="title-3 m-b-30">
                            <i class="zmdi zmdi-map"></i>Your Project Task
                        </h3>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                <label for="select" class=" form-control-label">Select Project History</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <select onchange="apexChart(this)" name="select" id="select" class="form-control">
                                    <option disabled selected>Please select</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.ProjectId">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div id="chart-container"></div>
                    </div>
                    <!-- END MAP DATA-->
                </div>
            </div>

        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->

@section Scripts {
    <script type="text/javascript" src="~/js/ganttchart.js"></script>
}





