@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutDashboard";
    var data = ViewBag.Message;
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <!-- USER DATA-->
            <div class="user-data m-b-30">
                <h3 class="title-3 m-b-30">
                    <i class="zmdi zmdi-account-calendar"></i>user data
                </h3>
                <div class="filters m-b-45">
                    <button type="button" class="btn btn-secondary mb-1" data-toggle="modal" data-target="#insertModal">Insert</button>
                </div>
                <div class="table-responsive table-data">
                    <table class="table" id="userdata">
                        <thead>
                            <tr>
                                <td>NIK</td>
                                <td>Name</td>
                                <td>Phone Number</td>
                                <td>Birth Date</td>
                                <td>Address</td>
                                <td>Gender</td>
                                <td>Role</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <!-- END USER DATA-->
        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->
<!-- modal insert -->
<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="largeModalLabel">Insert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("InsertEmployee", "Dashboard")" method="post">
                    <div class="form-group">
                        <input id="inputNik" class="au-input au-input--full hide" type="text" name="NIK" placeholder="Name" hidden>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input class="au-input au-input--full" type="text" name="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input class="au-input au-input--full" type="email" name="Email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="au-input au-input--full" type="password" name="Password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input class="au-input au-input--full" type="number" name="PhoneNumber" placeholder="Phone Number">
                    </div>
                    <div class="form-group">
                        <label>Birth Date</label>
                        <input class="au-input au-input--full" type="datetime" name="BirthDate" placeholder="Birth Date">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input class="au-input au-input--full" type="text" name="Address" placeholder="Address">
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label class=" form-control-label">Gender</label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check">
                                <div class="radio">
                                    <label for="radio1" class="form-check-label ">
                                        <input type="radio" id="InputGender" name="Gender" value="0" class="form-check-input">Pria
                                    </label>
                                </div>
                                <div class="radio">
                                    <label for="radio2" class="form-check-label ">
                                        <input type="radio" id="InputGender" name="Gender" value="1" class="form-check-input">Wanita
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="select" class=" form-control-label">Select</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="RoleId" id="InputRoleId" class="form-control">
                                <option value="0">Please select</option>
                                <option value="1">Option #1</option>
                                <option value="2">Option #2</option>
                                <option value="3">Option #3</option>
                            </select>
                        </div>
                    </div>
                    <div class="login-checkbox">
                        <label>
                            <input type="checkbox" name="aggree">Agree the terms and policy
                        </label>
                    </div>
                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Submit</button>
                </form>
            </div>
            <div class="modal-footer align-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>
<!-- end modal insert -->

<!-- modal update -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="largeModalLabel">Update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("UpdateEmployee", "Dashboard")" method="post">
                    <input class="form-control hide" name="NIK" id="updateNIK" hidden>
                    <div class="form-group">
                        <label>Name</label>
                        <input id="updateName" class="au-input au-input--full" type="text" name="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input id="updateEmail" class="au-input au-input--full" type="email" name="Email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input id="updatePhoneNumber" class="au-input au-input--full" type="text" name="PhoneNumber" placeholder="Phone Number">
                    </div>
                    <div class="form-group">
                        <label>Birth Date</label>
                        <input id="updateBirthDate" class="au-input au-input--full" type="datetime" name="BirthDate" placeholder="Birth Date">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input id="updateAddress" class="au-input au-input--full" type="text" name="Address" placeholder="Address">
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label class=" form-control-label">Gender</label>
                        </div>
                        <div class="col col-md-9">
                            <div class="form-check">
                                <div class="radio">
                                    <label for="radio1" class="form-check-label ">
                                        <input type="radio" id="pria" name="radios" value="0" class="form-check-input">Pria
                                    </label>
                                </div>
                                <div class="radio">
                                    <label for="radio2" class="form-check-label ">
                                        <input type="radio" id="wanita" name="radios" value="1" class="form-check-input">Wanita
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label for="select" class=" form-control-label">Role</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <select name="RoleName" id="updateRoleName" class="form-control">
                                <option value="0">Please select</option>
                                <option value="1" selected>Admin</option>
                                <option value="2">Manager</option>
                                <option value="3">QA</option>
                            </select>
                        </div>
                    </div>
                    <div class="login-checkbox">
                        <label>
                            <input type="checkbox" name="aggree">Agree the terms and policy
                        </label>
                    </div>
                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Submit</button>
                </form>
            </div>
            <div class="modal-footer align-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>
<!-- end modal update -->

@section Scripts {
    <script type="text/javascript" src="~/js/userdata.js"></script>
}